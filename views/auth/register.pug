extends ../layout

block main
  .main-content
    form(action='/register', method='post')
      h1.display-4.text-center.my-4 Create Account
      .form-group
        label(for='username') Username:
        input#username.form-control(name='username', type='text', placeholder='Choose a username')
      .form-group
        label(for='password') Password:
        input#password.form-control(name='password', type='password', placeholder='Enter Password')
      .form-group
        label(for='confirmPassword') Confirm Password:
        input#confirmPassword.form-control(name='confirmPassword', type='password', placeholder='Repeat password')
      .form-group
        label(for='userNumber') Phone number:
        input#confirmPassword.form-control(name='userNumber', type='text', placeholder='Your number')
      button.btn.btn-primary.btn-block.my-4(type='submit') Register
      .account-status
        a(href="/login") Already have an account? Log In

    
